#ifndef DELTA_T_SENSOR_NODE_CONFIG_H_IN
#define DELTA_T_SENSOR_NODE_CONFIG_H_IN

#include <Arduino.h>

/// Default DHT2 sensor data pin.
#define DHT22_DATA_PIN D5

/// Default main loop delay [ms].
#define MAIN_LOOP_DELAY 5000UL

/// Default MQTT hostname.
#define MQTT_HOSTNAME "YOUR-MQTT-HOSTNAME"

/// Default MQTT port.
#define MQTT_PORT 1883

/// Default MQTT username.
#define MQTT_USERNAME "YOUR-MQTT-USERNAME"

/// Default MQTT password.
#define MQTT_PASSWORD "YOUR-MQTT-PASSWORD"

/// Default serial line speed [baud].
#define SERIAL_LINE_SPEED 115200UL

/// Default Arduino SSD1306 display height.
#define SSD1306_HEIGHT 32

/// Default Arduino SSD1306 display width.
#define SSD1306_WIDTH 128

/// Default WiFi passphrase.
#define WIFI_PASSPHRASE "YOUR-WIFI-PASSPHRASE"

/// Default WiFi SSID.
#define WIFI_SSID "YOUR-WIFI-SSID"

#endif // DELTA_T_SENSOR_NODE_CONFIG_H_IN
